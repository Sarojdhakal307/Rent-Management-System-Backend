{
  "name": "rent-management-system-backend",
  "version": "1.0.0",
  "description": "A backend API for a Rent Management System built with Node.js, Express, TypeScript, and PostgreSQL. Utilizing Drizzle ORM for database management.",
  "main": "./dist/index.js",
 "scripts": {
  "clean": "rimraf dist",
  "build": "npm run clean && tsc && npm run verify-build",
  "verify-build": "node -e \"console.log('Build verification:'); console.log('dist/index.js exists:', require('fs').existsSync('./dist/index.js')); console.log('dist contents:', require('fs').readdirSync('./dist'));\"",
  "dev": "tsx watch --clear-screen=false src/index.ts",
  "start": "node dist/index.js",
  "start:direct": "node dist/index.js",
  "migration:generate": "drizzle-kit generate",
  "migration:migrate": "drizzle-kit migrate"
},

  "author": "Saroj Dhakal",
  "license": "ISC",
  "dependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.11.7",
    "axios": "^1.7.6",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dns": "^0.2.2",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.24.2",
    "drizzle-orm": "^0.33.0",
    "express": "^4.19.2",
    "isemail": "^3.2.0",
    "jsonwebtoken": "^9.0.2",
    "net": "^1.0.2",
    "nodemailer": "^6.9.14",
    "nodemon": "^3.1.4",
    "pg": "^8.12.0",
    "short-unique-id": "^5.2.0",
    "uuid": "^10.0.0",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.1",
    "@types/validator": "^13.12.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
